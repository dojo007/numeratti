# import the time module
import time
  
# define the countdown func.
def countdown(t):
    
    while t:
        mins, secs = divmod(t, 60)
        timer = '{:02d}:{:02d}'.format(mins, secs)
        print(timer, end="\r")
        time.sleep(1)
        t -= 1
      
    print('Myrna is in ZORILLO CALIFORNIA')
  
  
# input time in seconds
t = input("15")
  
# function call
countdown(int(5))
